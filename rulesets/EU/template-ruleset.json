  {
    "id": "GR-EU-0000",
    "description": "Exactly one type of event.",
    "inputParameter": "Entire HCert JSON (\"r\", \"t\", \"v\")",
    "logic": {
      "===": [
        {
          "reduce": [
            [
              {
                "var": "payload.r"
              },
              {
                "var": "payload.t"
              },
              {
                "var": "payload.v"
              }
            ],
            {
              "+": [
                {
                  "var": "accumulator"
                },
                {
                  "if": [
                    {
                      "var": "current.0"
                    },
                    1,
                    0
                  ]
                }
              ]
            },
            0
          ]
        },
        1
      ]
    }
  },
